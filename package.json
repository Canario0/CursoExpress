{
  "name": "cursoexpress",
  "version": "1.0.0",
  "description": "express class",
  "main": "./dist/cursoexpress/index.js",
  "type": "commonjs",
  "scripts": {
    "test": "env TS_NODE_FILES=true mocha --exit -r ts-node/register src/test/**/*.test.ts",
    "build": "tsc -p ./tsconfig.app.json",
    "start": "npm run build && echo 'compiled!' && node ./dist/cursoexpress/index.js",
    "start:watch": "nodemon"
  },
  "author": "Pablo Renero Balgañón",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/passport": "^1.0.5",
    "@types/passport-jwt": "^3.0.3",
    "@types/uuid": "^8.3.0",
    "bcrypt": "^5.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.6",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "ignore": [
      "src/**.test.ts",
      "src/**.d.ts"
    ],
    "exec": "npm start"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/chai-http": "^4.2.0",
    "@types/mocha": "^8.2.0",
